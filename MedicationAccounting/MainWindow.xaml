<Window x:Class="MedicationAccounting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedicationAccounting"
        mc:Ignorable="d"
        Title="Authorisation" Height="225" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBox x:Name="Login" HorizontalAlignment="Left" Margin="139,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="127"/>
        <TextBox x:Name="Password" HorizontalAlignment="Left" Margin="139,91,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="127"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="139,136,0,0" VerticalAlignment="Top" Width="127" Click="Login_Click"/>

    </Grid>
</Window>
